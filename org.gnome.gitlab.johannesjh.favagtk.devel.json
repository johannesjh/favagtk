/* devel build of favagtk */
{
  "app-id": "org.gnome.gitlab.johannesjh.favagtk",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "favagtk",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=host"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    /* blueprint compiler for .ui files */
    "requirements/blueprint-compiler.json",

    /* main application dependencies, downloaded and installed on the fly */
    {
      "name": "python3-main",
      "buildsystem": "simple",
      "build-options": {
        "build-args": ["--share=network"]
      },
      "build-commands": [
        "pip3 install --verbose --ignore-installed --prefix=${FLATPAK_DEST} -r python3-main.txt"
      ],
      "sources": [
        {
          "type": "file",
          "path": "requirements/python3-main.txt"
        }
      ]
    },

    /* optional dependencies for fava plugins */
    "requirements/python3-scikit-learn.json",
    "requirements/python3-optional.json",

    /* the actual favagtk application */
    {
      "name": "favagtk",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "config-opts": ["-Dprofile=devel"]
    }
  ],
  "build-options": {
    "env": {}
  }
}
